set fenc=utf-8

syntax on
set number
set cursorline
set showmatch
set autoindent

set backspace=indent,eol,start
set mouse=a

set hlsearch
set ignorecase
set incsearch

inoremap { {}<Left>
inoremap [ []<Left>
inoremap ( ()<Left>
inoremap " ""<LEFT>
inoremap ' ''<LEFT>

set tabstop=2
set shiftwidth=2

set clipboard=unnamedplus

